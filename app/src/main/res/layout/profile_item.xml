<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/profile_bg">

            <ImageView
                android:layout_width="42sp"
                android:layout_height="42sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_exit_to_app_white_24dp"
                android:layout_margin="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"></RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_profile"
        android:text="User Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gmail_user"
        android:layout_below="@id/label_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/label_transactionHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction History"
        android:layout_below="@+id/label_email"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/label_transactionHistory"
        android:layout_marginStart="11dp"
        android:background="#D3D3D3"
        android:layout_marginEnd="79.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:layout_margin="11dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date_transaction"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_margin="7.5dp"/>

                <View
                    android:id="@+id/line2"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/date_transaction"
                    android:layout_marginStart="7.5dp"
                    android:background="#D3D3D3" />

                <RelativeLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logitech G105"
                        android:layout_toRightOf="@id/item_name"
                        android:layout_marginTop="6.5dp"/>
                    <ImageView
                        android:id="@+id/item_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_margin="7dp"/>

                    <ImageView
                        android:id="@+id/item_price"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_margin="7dp"
                        android:layout_below="@id/item_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RP. 300.000,00"
                        android:layout_toRightOf="@id/item_price"
                        android:layout_below="@id/item_name"
                        android:layout_marginTop="6.5dp" />

                    <ImageView
                        android:id="@+id/item_amount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_below="@id/item_price"
                        android:layout_margin="7dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Unit"
                        android:layout_toRightOf="@id/item_amount"
                        android:layout_below="@id/item_price"
                        android:layout_marginTop="6.5dp"/>
                </RelativeLayout>
            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:layout_weight="1"
            android:layout_margin="11dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_transaction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date_transaction"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_margin="7.5dp"/>

                <View
                    android:id="@+id/line2.5"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/date_transaction2"
                    android:layout_marginStart="7.5dp"
                    android:background="#D3D3D3" />

                <RelativeLayout
                    android:id="@+id/history2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logitech G105"
                        android:layout_toRightOf="@id/item_name2"
                        android:layout_marginTop="6.5dp"/>
                    <ImageView
                        android:id="@+id/item_name2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_margin="7dp"/>

                    <ImageView
                        android:id="@+id/item_price2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_margin="7dp"
                        android:layout_below="@id/item_name2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RP. 300.000,00"
                        android:layout_toRightOf="@id/item_price2"
                        android:layout_below="@id/item_name2"
                        android:layout_marginTop="6.5dp" />

                    <ImageView
                        android:id="@+id/item_amount2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/img_item"
                        android:layout_below="@id/item_price2"
                        android:layout_margin="7dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Unit"
                        android:layout_toRightOf="@id/item_amount2"
                        android:layout_below="@id/item_price2"
                        android:layout_marginTop="6.5dp"/>
                </RelativeLayout>
            </RelativeLayout>




        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>